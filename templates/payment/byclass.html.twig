{% extends 'base.html.twig' %}

{% block title %}Create payment!{% endblock %}

{% block main %}

    <div class="container body-content span=10 offset=2">
        <div class="well" id="payment">
            <form class="form-horizontal" action="{{ path('payment_by_class') }}" method="POST">
                <fieldset>
                    <legend>Затваряне на месец
                        {% if month is defined %}
                            <span>{{ month|date('m.Y') }}</span>
                        {% endif %}
                    </legend>
                    <div class="form-group">
                        <div class="col-sm-2" id="class">
                            <label class="control-label" for="class_id">От клас</label>
                            <select class="form-control" id="class_id" name="class[id]">
                                {% if class is defined %}
                                    <option value="{{ class.id }}">{{ class.name }}</option>
                                {% endif %}
                                {% for class in classes %}
                                    <option value="{{ class.id }}">{{ class.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-5 col-sm-offset-5">
                            <a class="btn btn-default" href="{{ path('app_product_index') }}">Изход</a>
                            <button type="submit" class="btn btn-primary">Избор</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    {% if class is defined %}
        <div class="container body-content span=8 offset=2">
            <div class="well">
                <form class="form-horizontal" action="{{ path('payment_by_class') }}" method="POST">
                    <fieldset>
                        <legend>Преключване на месеца за клас "{{ class.name }}"</legend>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Клас</th>
                                    <th scope="col">Име на ученик</th>
                                    <th scope="col">Цена</th>
                                    <th scope="col">Такса в дни</th>
                                    <th scope="col">Такса за месец</th>
                                    <th scope="col">Платено от</th>
                                    <th scope="col">Касиер</th>
                                    <th scope="col">Дата на плащане</th>
                                    <th scope="col">Статус</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for payment in payments %}
                                <tr>
                                    <td>{{ payment.products.student.class.name }}</td>
                                    <td>{{ payment.products.student.fullName }}</td>
                                    <td>{{ payment.products.price }} лв.</td>
                                    <td>{{ payment.products.feeInDays }}</td>
                                    <td>{{ payment.products.forMonth|date('m.Y') }}</td>
                                    <td>{{ payment.namePayer }}</td>
                                    <td>{{ payment.seller }}</td>
                                    <td>{{ payment.datePurchases|date('d.m.Y H:i:s') }}</td>
                                    {% if payment.products.isPaid %}
                                        <td>Платено</td>
                                    {% else %}
                                        <td>Неплтено</td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <div class="form-group">
                            <div class="col-sm-5 col-sm-offset-5">
                                <a class="btn btn-success" href="{{ path('payment_ended_mont', {id: class.id}) }}">Приключване</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    {% endif %}

{% endblock %}