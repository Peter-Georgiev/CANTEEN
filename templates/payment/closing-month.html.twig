{% extends 'base.html.twig' %}

{% block title %}Closing month!{% endblock %}

{% block main %}

    <div class="js-closing-month" data="{{ json }}"></div>

    <div class="container body-content span=10 offset=2">
        <div class="well" id="closing_month" hidden>
            <form class="form-horizontal" action="" method="POST">
                <fieldset>
                    <legend>Затваряне на месец
                        <select class="form-control" id="month_id" name="month[id]"></select>
                    </legend>
                    <div class="form-group">
                        <div class="col-sm-4" id="class">
                            <label class="control-label" for="class_id">Затваряне на</label>
                            <ul id="name"></ul>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-5 col-sm-offset-5">
                            <a class="btn btn-default" href="{{ path('app_product_index') }}">Изход</a>
                            <button type="submit" class="btn btn-warning">Приключване</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="container body-content span=8 offset=2">
        <div id="notifications-table">
            <div id="loadingBox" class="notification">
                <span>Зареждане на данните …</span>
            </div>
            <div id="errorBox" class="notification">
                <span>Грешка в данните!</span>
            </div>
        </div>
    </div>

{% endblock %}


{% block jsCustomPage %}
    {{ encore_entry_script_tags('pageClosingMonth') }}
{% endblock %}