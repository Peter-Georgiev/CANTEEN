{% extends 'base.html.twig' %}

{% block title %}Save product!{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well" id="paymentProduct">
            <fieldset>
                <legend>Плащане на задължение</legend>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Име на ученик</th>
                            <th scope="col">Клас</th>
                            <th scope="col">Цена</th>
                            <th scope="col">Такса в дни</th>
                            <th scope="col">Такса за месец</th>
                            <th scope="col">Платено от</th>
                            <th scope="col">Платено на</th>
                            <th scope="col">Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ payment.products.student.fullName }}</td>
                            <td>{{ payment.products.student.class.name }}</td>
                            <td>{{ payment.products.price }} лв.</td>
                            <td>{{ payment.products.feeInDays }}</td>
                            <td>{{ payment.products.forMonth|date('m.Y') }}</td>
                            <td>{{ payment.namePayer }}</td>
                            <td>{{ payment.seller }}</td>
                            {% if payment.products.isPaid %}
                                <td>Платено</td>
                            {% else %}
                                <td>Неплтено</td>
                            {% endif %}
                        </tr>
                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('payment') }}">Изход</a>
                        <a class="btn btn-default" href="{{ path('payment_pdf', {'id' : payment.id}) }}">Печат</a>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

{% endblock %}