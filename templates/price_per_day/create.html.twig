{% extends 'base.html.twig' %}

{% block title %}Create price!{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well" id="addPricePerDay">
            {{ form_start(form) }}
                <fieldset>
                    <legend>Добавяне на ценоразпис</legend>

                    <div class="col-sm-2">
                        {{ form_row(form.price, {
                            label: 'Цена за ден в лв.'
                        }) }}
                    </div>

                    <div class="col-sm-3">
                            <div class="form-group">
                                <label for="price_per_day_day" class="required">Дни</label>
                                <input type="number" id="price_per_day_day" required="required" class="form-control" >
                            </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="price_per_day_sum" class="required">Общо</label>
                            <input type="number" id="price_per_day_sum" value="0.00" required="required" class="form-control" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('price_per_day') }}">Изход</a>
                            <button type="submit" class="btn btn-primary">Запис</button>
                        </div>
                    </div>

                </fieldset>
            {{ form_end(form) }}
        </div>
    </div>


    <div class="container body-content span=8 offset=2">
        <div class="well"  id="addOnBtn">
            <button type="submit" class="btn btn-info center-block">Добавяне на ценоразпис</button>
        </div>
        <div id="notifications-table">
            <div id="loadingBox" class="notification">
                <span>Зареждане на данните …</span>
            </div>
            <div id="errorBox" class="notification">
                <span>Грешка в данните!</span>
            </div>
        </div>
        <div class="table-responsive">
            <table id="dataTable"  class="display" cellspacing="0" width="100%"></table>
        </div>
    </div>

{% endblock %}

{% block jsCustomPage %}
    {{ encore_entry_script_tags('pagePricePerDayAjax') }}
{% endblock %}